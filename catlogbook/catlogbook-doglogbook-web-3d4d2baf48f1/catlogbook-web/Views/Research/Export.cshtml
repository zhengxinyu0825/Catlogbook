@using doglogbook_web.Models
@{
    Layout = MVC.Shared.Views._ContainerLayout;
    ViewBag.Title = Html.T("Title", "Export");
}


<div class="container">
    @using (Html.BeginForm("GenerateUsers", "Research", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <h4>Export Users</h4>
            <hr />
        </div>
        
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <button type="submit" class="btn btn-default">Generate</button>
            </div>
        </div>
    }
</div>

<div class="container">
    @using (Html.BeginForm("Generate", "Research", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div class="row">
            <h4>Export Features</h4>
            <hr />
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div>
                    <label>Feature</label>
                    @Html.DropDownList("FeatureType", new SelectList(ViewBag.FeaturesSelect, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div>
                    <label>Breed</label>
                    @Html.DropDownList("BreedId", new SelectList(ViewBag.Breeds, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                </div>

            </div>
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                <div>
                    <label>Breed Percentage</label>
                    @Html.DropDownList("BreedPercentage", new SelectList(ViewBag.BreedPercentageSelect, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                <div>
                    <label>Sex</label>
                    @Html.DropDownList("SexId", new SelectList(ViewBag.SexSelect, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                <div>
                    <label>Age</label>
                    @Html.DropDownList("Age", new SelectList(ViewBag.Ages, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                <div>
                    <label>Age Unit</label>
                    @Html.DropDownList("AgeUnit", new SelectList(ViewBag.AgeUnits, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3">
                <div>
                    <label>Age Range</label>
                    @Html.DropDownList("AgeRange", new SelectList(ViewBag.AgeRanges, "Value", "Text"), htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <button type="submit" class="btn btn-default">Generate</button>
            </div>
        </div>
    }
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

        <script>
            $(function () {
                $('#BreedId').on('change', function () {
                    if (this.value == '') {
                        $('#BreedPercentage').val("");
                    }
                });

                $('#Age').on('change', function () {
                    if (this.value == '') {
                        $('#AgeUnit').val("");
                    }
                });

                $('#AgeUnit').on('change', function () {
                    if (this.value == '') {
                        $('#AgeRange').val("");
                    }
                });

            });
        </script>
    }



